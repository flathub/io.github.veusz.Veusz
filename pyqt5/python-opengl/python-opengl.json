{
    "name": "python-opengl",
    "buildsystem": "simple",
    "build-commands": [
        "pip3 install --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"PyOpenGL\" --no-build-isolation"
    ],
    "sources": [
        {
            "type": "file",
            "url": "https://files.pythonhosted.org/packages/5b/01/f8fd986bc7f456f1a925ee0239f0391838ade92cdb6e5b674ffb8b86cfd6/PyOpenGL-3.1.6.tar.gz",
            "sha256": "8ea6c8773927eda7405bffc6f5bb93be81569a7b05c8cac50cd94e969dce5e27",
            "x-checker-data": {
                "type": "pypi",
                "name": "PyOpenGL"
            }
        }
    ],
    "modules": [
        {
            "name": "freeglut",
            "buildsystem": "cmake",
            "build-options": {
                "cflags": "-fcommon"
            },
            "config-opts": [
                "-DFREEGLUT_BUILD_STATIC_LIBS=OFF",
                "-DCMAKE_BUILD_TYPE=None"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/freeglut/files/freeglut/3.2.1/freeglut-3.2.1.tar.gz",
                    "sha256": "d4000e02102acaf259998c870e25214739d1f16f67f99cb35e4f46841399da68",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 846,
                        "url-template": "https://sourceforge.net/projects/freeglut/files/freeglut/$version/freeglut-$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/pkgconfig"
            ],
            "modules": [
                "../../shared-modules/glu/glu-9.json"
            ]
        }
    ]
}
